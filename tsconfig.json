{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"]
}
